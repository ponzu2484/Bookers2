<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
            <h2>User info</h2>
            <h2 class="mt-3">New book</h2>
            <%= form_with model: @book do |f| %>
                <label for="book_title">Title</label>
                <%= f.text_field :title %>
                <label for="book_opinion">Opinion</label>
                <%= f.text_area :body %>
                <%= f.submit "Create Book" %>
            <% end %>
        </div>
    </div>
</div>